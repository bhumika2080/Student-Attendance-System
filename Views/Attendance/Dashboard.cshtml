
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dashboard</h1>

@model IEnumerable<Student_Attendance_System.Models.RegisterStudent>

<h2 class="mb-4">Student Dashboard</h2>

<!-- Display error message if any -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Display confirmation message if any -->
@if (TempData["ConfirmationMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["ConfirmationMessage"]
    </div>
}

<form asp-action="Dashboard" method="get" class="mb-4">
    <!-- Existing filter form -->
</form>

<form asp-action="SaveAttendance" method="post">
    <label for="dateOfAttendance">Date of Attendance:</label>
    <input type="date" name="dateOfAttendance" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="mb-3" />

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Student Name</th>
                <th>Subject</th>
                <th>Level</th>
                <th>Attendance Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentName</td>
                    <td>@student.Course</td>
                    <td>@student.Level</td>
                    <td>
                        <input type="checkbox" name="attendanceRecords[@student.id].AttendanceStatus" />
                    </td>
                    <input type="hidden" name="attendanceRecords[@student.id].Id" value="@student.id" />
                    <input type="hidden" name="attendanceRecords[@student.id].StudentName" value="@student.StudentName" />
                    <input type="hidden" name="attendanceRecords[@student.id].Course" value="@student.Course" />
                    <input type="hidden" name="attendanceRecords[@student.id].Level" value="@student.Level" />
                    <input type="hidden" name="attendanceRecords[@student.id].DateOfAttendance" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Attendance</button>
</form>
