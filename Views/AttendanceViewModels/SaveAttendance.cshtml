@model List<Student_Attendance_System.Models.AttendanceViewModel>


@{
    ViewData["Title"] = "Attendance Index";
}

<h2>Student Attendance</h2>

@using (Html.BeginForm("SaveAttendance", "Attendance", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Course</th>
                <th>Level</th>
                <th>Date of Attendance</th>
                <th>Mark Attendance</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].StudentName</td>
                    <td>@Model[i].Course</td>
                    <td>@Model[i].Level</td>
                    <td>
                        <input type="date" name="[@i].DateOfAttendance" value="@Model[i].DateOfAttendance.ToString("yyyy-MM-dd")" />
                    </td>
                    <td>
                        <input type="checkbox" name="[@i].MarkAttendance" checked="@Model[i].MarkAttendance" />
                    </td>
                    <input type="hidden" name="[@i].StudentId" value="@Model[i].StudentId" />
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Attendance</button>
}
