@model IEnumerable<Student_Attendance_System.Models.AttendanceData>

<h1>Attendance Records</h1>

<table class="table">
    <thead>
        <tr>
            <th>Attendance Date</th>
            <th>Is Present Today</th>
            <th>Student</th>
            <th>Course</th>
            <th>Level</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendanceData in Model)
        {
            <tr>
                <td>
                    <input type="date" name="attendanceDate" value="@attendanceData.AttendanceDate.ToString("yyyy-MM-dd")" />
                </td>
                <td>
                    <input type="checkbox" name="isPresentToday" @(attendanceData.IsPresentToday ? "checked" : "") />
                </td>
                <td>
                    @attendanceData.RegisterStudent?.StudentName
                </td>
                <td>
                    @attendanceData.Course?.CourseName
                </td>
                <td>
                    @attendanceData.Level?.LevelName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@attendanceData.AttendanceDataId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@attendanceData.AttendanceDataId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@attendanceData.AttendanceDataId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
